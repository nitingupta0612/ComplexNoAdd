#include<iostream>
using namespace std;
class complex
{
	private:
		int real,imag;
		public:
			void getdata()
			{
				cout<<"Enter real and imaginary part of complex number : ";
				cin>>real>>imag;
			}
			void disp()
			{
				cout<<real<<"+"<<imag<<"i";
			}
			complex operator + (complex o)
			{
				complex s;
				s.real=real+o.real;
				s.imag=imag+o.imag;
				return s;
			}
};
int main()
{
	complex p,q,z;
	p.getdata();
	q.getdata();
	z=p+q;
	z.disp();
	return 0;
}
